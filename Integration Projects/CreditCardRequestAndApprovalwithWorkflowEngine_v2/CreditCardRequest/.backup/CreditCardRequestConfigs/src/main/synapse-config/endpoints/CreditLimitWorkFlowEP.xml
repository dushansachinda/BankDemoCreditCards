<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="CreditLimitWorkFlowEP" xmlns="http://ws.apache.org/ns/synapse">
    <http method="post" uri-template="http://workflow-engine:8090/workflow/creditLimit/{uri.var.application_id}">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
