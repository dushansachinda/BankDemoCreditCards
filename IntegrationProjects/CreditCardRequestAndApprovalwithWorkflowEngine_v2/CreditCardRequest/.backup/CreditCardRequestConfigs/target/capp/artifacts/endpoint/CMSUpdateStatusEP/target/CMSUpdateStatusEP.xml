<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="CMSUpdateStatusEP" xmlns="http://ws.apache.org/ns/synapse">
    <http method="put" uri-template="http://cms:9090/cms/updateStatus/{uri.var.application_id}">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
